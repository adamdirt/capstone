/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{
  /* USER CODE BEGIN 1 */

	is_alive = 0;
	is_ready = 0;
	Sensor1Cfg.platform.address = 0x52;


  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */
//  HAL_GPIO_WritePin(AVDD_GPIO_Port, AVDD_Pin, GPIO_PIN_SET);
//  HAL_GPIO_WritePin(IOVDD_GPIO_Port, IOVDD_Pin, GPIO_PIN_SET);
  HAL_GPIO_WritePin(LPn_GPIO_Port, LPn_Pin, GPIO_PIN_SET);
  HAL_GPIO_WritePin(I2C_RST_GPIO_Port, I2C_RST_Pin, GPIO_PIN_RESET);
  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_USART2_UART_Init();
  MX_I2C1_Init();
  /* USER CODE BEGIN 2 */

//  HAL_GPIO_WritePin(AVDD_GPIO_Port, AVDD_Pin, GPIO_PIN_RESET);
//  HAL_GPIO_WritePin(IOVDD_GPIO_Port, IOVDD_Pin, GPIO_PIN_RESET);
//  HAL_GPIO_WritePin(LPn_GPIO_Port, LPn_Pin, GPIO_PIN_RESET);
//
//  HAL_Delay(10);

  uint8_t init_status = vl53l5cx_init(&Sensor1Cfg);
  HAL_Delay(1000);

  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
#ifdef DO_MOTION_TEST
  init_status = vl53l5cx_motion_indicator_init(&Sensor1Cfg, &Sensor1MotionCfg, VL53L5CX_RESOLUTION_4X4);
  HAL_Delay(100);

  init_status = vl53l5cx_set_ranging_frequency_hz(&Sensor1Cfg, 10);
  HAL_Delay(500);

  init_status = vl53l5cx_start_ranging(&Sensor1Cfg); // returns 255 (0xFF) for whatever reason
#endif
  while (1)
  {

#ifdef DO_MOTION_TEST

	  if (detect_motion(Sensor1Results)){HAL_GPIO_WritePin(GPIOA,LED_GREEN_Pin,GPIO_PIN_SET);}
	  else {HAL_GPIO_WritePin(LED_GREEN_GPIO_Port,LED_GREEN_Pin,GPIO_PIN_RESET);}

	  // if samples reaches certain point, blink led

#endif

#ifdef DO_IS_ALIVE_TEST
	  HAL_GPIO_TogglePin(LED_GREEN_GPIO_Port,LED_GREEN_Pin);
	  HAL_Delay(100);
	  init_status = vl53l5cx_is_alive(&Sensor1Cfg, &is_alive);
	  if (is_alive == 1 && init_status == 0){
		  HAL_GPIO_WritePin(LED_GREEN_GPIO_Port,LED_GREEN_Pin,GPIO_PIN_SET);
		  while(1){}
	  }
#endif

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */
  }
  /* USER CODE END 3 */
}

/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  HAL_PWREx_ControlVoltageScaling(PWR_REGULATOR_VOLTAGE_SCALE1);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSIDiv = RCC_HSI_DIV1;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

